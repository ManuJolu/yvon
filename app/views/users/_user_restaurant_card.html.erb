<div class="results">
  <div class="card card-large " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path restaurant.photo.path, height: 400, width: 700, crop: :fill %>);">
    <div class="card-category card-category-large">
      <h2><%= restaurant.name %></h2>
    </div>
    <div class="card-description">
      <p><strong><%= "#{restaurant.description.first(170)}..." if restaurant.try(:description) %></strong><p>
      <h2><%= restaurant.address %></h2>
    </div>
    <%= link_to "", restaurant, class: 'card-link' %>
  </div>
</div>

