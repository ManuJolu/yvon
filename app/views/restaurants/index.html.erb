<div class="banner" style="background-image: linear-gradient(-225deg, rgba(41,44,60,0.6) 0%, rgba(80,78,100,0.5) 50%), url(<%= image_path 'banner_restaurants' %>);">
  <div class="banner-content">
    <h1>Yvon knows that taste and time matter</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-4">
        <%= render 'restaurant_card', restaurant: restaurant %>
      </div>
    <% end %>
  </div>
</div>
