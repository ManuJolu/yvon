<%= simple_form_for restaurant, remote: true do |f| %>
  <%= f.input :facebook_url %>
  <%= f.association :restaurant_category, collection: RestaurantCategory.includes(:mobility_string_translations).sort_by { |rc| rc.name }, include_blank: false %>
  <%= f.input :mode, collection: Restaurant.modes.map {|k, v| [t(".#{k}"), k]}, include_blank: false %>
  <%= f.input :messenger_pass %>
  <%= f.input :name %>
  <%= f.input :about_fr %>
  <%= f.input :about_en %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :shift %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
