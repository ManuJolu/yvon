<div class="results">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path restaurant.photo.path, height: 400, width: 700, crop: :fill %>);">
    <div class="card-category">
      <h2><%= restaurant.name %></h2>
    </div>
    <div class="card-description">
      <p><strong><%= "#{restaurant.description.first(50)}..." if restaurant.try(:description) %></strong><p>
      <h2><%= restaurant.address.capitalize %></h2>
    </div>
    <% avatar_url = restaurant.user.facebook_picture_url || "http://placehold.it/30x30"  %>
    <%= image_tag avatar_url, class: 'card-user avatar' %>
    <%= link_to restaurant.name, restaurant, class: 'card-link' %>
  </div>
</div>


