<div class="nested-fields form-inline">
  <%= f.input :name, label: false, placeholder: "Name" %>
  <%= f.input :timing, collection: MealCategory.timings.map {|k, v| [k, k]}, label:false, prompt: "Select timing" %>
  <%= f.input :position, label: false, placeholder: "Position" %>
  <%= link_to_remove_association f do %>
    <i class="fa fa-times" aria-hidden="true"></i>
  <% end %>
</div>
