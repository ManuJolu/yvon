<div class="card" style="background-image: linear-gradient(rgba(41,44,60,0.6) 0%, rgba(80,78,100,0.5) 50%), url(<%= cl_image_path restaurant.photo.path, height: 175, width: 360, crop: :fill %>);">
  <div class="card-category">
    <%= restaurant.address %>
  </div>
  <div class="card-description">
    <h3><%= restaurant.name %></h3>
    <p><%= restaurant&.description&.truncate(60) %><p>
  </div>
  <%= link_to '', restaurant_meals_path(restaurant), class: 'card-link' %>
</div>


