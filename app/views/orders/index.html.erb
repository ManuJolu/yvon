<%= render 'restaurants/tabs', restaurant: @restaurant, active: 'orders' %>

<button class="btn btn-default marged" type="button" data-toggle="collapse" data-target="#pending">
  <span class="show-ctrl">
    <%= t '.pending' %> <i class="fa fa-chevron-down"></i>
  </span>
  <span class="hide-ctrl">
    <%= t '.pending' %> <i class="fa fa-chevron-up"></i>
  </span>
</button>
<div class="collapse in" id="pending">
  <% if @orders.to_deliver.any? %>
    <%= render 'orders/list', orders: @orders.to_deliver %>
  <% else %>
    <p class="marged"><%= t '.no_pending' %></p>
  <% end %>
</div>

<br>

<button class="btn btn-default collapsed marged" type="button" data-toggle="collapse" data-target="#delivered">
  <span class="show-ctrl">
    <%= t '.delivered' %><i class="fa fa-chevron-down"></i>
  </span>
  <span class="hide-ctrl">
    <%= t '.delivered' %><i class="fa fa-chevron-up"></i>
  </span>

</button>
<div class="collapse" id="delivered">
  <% if @orders.are_delivered.any? %>
    <%= render 'orders/list', orders: @orders.are_delivered %>
  <% else %>
    <p class="marged"><%= t '.no_delivered' %></p>
  <% end %>
</div>
