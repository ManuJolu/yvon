<!DOCTYPE html>
<html>
  <head>
    <title><%= yield_with_default(holder: :title, default: t('.title')) %></title>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch|Open+Sans+Condensed:300|Roboto+Condensed:400,700" rel="stylesheet">
    <%= favicon_link_tag 'y.jpg' %>

    <!-- Google Analytics -->
    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-91090965-1', 'auto');
        ga('send', 'pageview');
      </script>
    <% end %>

    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- Google result description-->
    <meta name="description" content="Yvon is a bot to order in less than 1 min chrono in yours best restaurants !">
    <meta property="og:title" content="Yvon - The innovative chatbot to order your lunch">
    <meta property="og:image" content= <%= image_url("fb-pic.jpg") %>>
    <meta property="og:description" content="Save your time and order your lunch with Yvon ! Yvon is a bot to order in less than 1 min chrono in yours best restaurants. You will be impressed.">
    <meta property="og:site_name" content="Hello Yvon"/>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <% if request.env['PATH_INFO'] == "/" || request.env['PATH_INFO'] == "/restaurants" %>
      <div class="navbar-fixed">
        <div class="background-custom"></div>
    <% else %>
      <div>
        <div class="background-dark"></div>
    <% end %>
        <%= render 'shared/navbar' %>
    </div>

    <div id="flashes">
      <%= render 'shared/flashes' %>
    </div>

    <main>
      <%= yield %>
    </main>

    <%= render 'shared/footer' %>

    <%= javascript_include_tag "application", "data-turbolinks-track" => 'reload', 'data-turbolinks-eval' => false %>

    <%= cloudinary_js_config %>

    <%= yield(:after_js) %>
  </body>
</html>

