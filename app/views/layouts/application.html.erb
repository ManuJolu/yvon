<!DOCTYPE html>
<html>
  <head>
    <title><%= raw yield_with_default(holder: :title, default: t('.title')) %></title>
    <%= render 'application/favicon' %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => 'reload' %>
    <%= favicon_link_tag 'y.jpg' %>

    <!-- Google Analytics -->
    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-91090965-1', 'auto');
        ga('send', 'pageview');
      </script>
    <% end %>

    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- Google result description-->
    <meta name="description" content="Yvon géolocalise le fooding autour de toi, te propose l'ensemble de la carte, prend ta commande, la transmet en cuisine et te prévient quand elle est prête !">
    <meta property="og:title" content="Contacte Yvon et commande à emporter via Messenger">
    <meta property="og:image" content= <%= image_url("og_image.png") %>>
    <meta property="og:description" content="Yvon géolocalise le fooding autour de toi, te propose l'ensemble de la carte, prend ta commande, la transmet en cuisine et te prévient quand elle est prête !">
    <meta property="og:site_name" content="Yvon"/>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">

    <%= render 'shared/navbar', path_info: request.env['PATH_INFO'] %>

    <%= render 'shared/flashes' %>

    <%= yield %>

    <%= render 'shared/footer' %>

    <%= javascript_include_tag "application", "data-turbolinks-track" => 'reload', 'data-turbolinks-eval' => false %>

    <%= cloudinary_js_config %>

    <%= yield(:after_js) %>
  </body>
</html>

