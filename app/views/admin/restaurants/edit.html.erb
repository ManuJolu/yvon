<%= render "restaurants/tabs", restaurant: @restaurant, active: 'admin' %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="marged">
        <%= render 'form', restaurant: @restaurant %>
      </div>
    </div>

    <% if @restaurant.deliveroo_url.present? %>
      <div class="col-sm-10 col-sm-offset-1">
        <h4>Import de données Deliveroo</h4>
        <%= link_to "Créer le menu depuis Deliveroo", admin_restaurant_deliveroo_update_path(@restaurant), class: "btn btn-danger" %>
      </div>
    <% end %>

    <% if @restaurant.foodora_url.present? %>
      <div class="col-sm-10 col-sm-offset-1">
        <h4>Import de données Foodora</h4>
        <%= link_to "Créer le menu depuis Foodora", admin_restaurant_foodora_update_path(@restaurant), class: "btn btn-danger" %>
      </div>
    <% end %>

    <% if @restaurant.ubereats_url.present? %>
      <div class="col-sm-10 col-sm-offset-1">
        <h4>Import de données UberEATS</h4>
        <%= link_to "Créer le menu depuis UberEATS", admin_restaurant_ubereats_update_path(@restaurant), class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>

  <h3>restaurant_<%= @restaurant.id %></h3>
  <%= image_tag @restaurant_messenger_code %>
  <div class="row">
    <% @table_messenger_code.each do |k, v| %>
      <div class="col-md-4">
        <h3><%= k %></h3>
        <%= image_tag v %>
      </div>
    <% end -%>
  </div>

</div>
