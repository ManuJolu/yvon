<%= simple_form_for [restaurant, meal], remote: true do |f| %>
  <%= f.input :name_fr %>
  <%= f.input :name_en %>
  <%= f.input :description_fr %>
  <%= f.input :description_en %>
  <%= f.association :options, collection: meal.restaurant.options, as: :check_boxes %>
  <%= f.input :price %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.submit class: 'btn btn-primary' %>
  <%= f.association :meal_category, collection: meal.restaurant.meal_categories %>
  <%= f.input :position %>
  <%= f.input :tax_rate, collection: Meal.tax_rates.map {|k, v| [k, k]} %>
  <%= f.input :active %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
