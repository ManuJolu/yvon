<%= simple_form_for meal, remote: true do |f| %>
  <%= f.association :restaurant, as: :hidden %>
  <%= f.input :active %>
  <%= f.input :name, label: "Meal's name", error: "Meals's name is mandatory, please specify one" %>
  <%= f.association :meal_category %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :tax_rate, collection: Meal.tax_rates.map {|k, v| [k, k]} %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
