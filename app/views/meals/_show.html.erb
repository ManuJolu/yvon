<div class="container">

  <table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Meal Name</th>
      <th>Description</th>
      <th>Prix</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant.meals.each do |meal| %>
      <tr>
        <td>
          <%= meal.category %>
        </td>
        <td>
          <%= meal.name %>
        </td>
        <td>
          <%= meal.description %>
        </td>
        <td>
          <%= meal.price %>
        </td>
        <td>
          <%= link_to edit_restaurant_meal_path(meal) do %>
          <i class="fa fa-pencil" ></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
